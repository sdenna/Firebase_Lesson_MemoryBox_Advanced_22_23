<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firebase_Auth_Firestore_Lesson_22_23" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonStyles" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_width">@dimen/buttonWidth</item>
    </style>

    <style name="spinnerStyles" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:background">@color/spinnerColor</item>
        <item name="height">@dimen/spinnerHeight</item>
        <item name="textColorAlertDialogListItem">@color/primaryDarkColor</item>
    </style>

    <style name="editTextStyles" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/marginFromTop</item>
        <item name="backgroundColor">@color/spinnerColor</item>
    </style>
</resources>